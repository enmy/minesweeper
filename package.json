{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "test": "jest --env=jsdom",
        "test-watch": "jest --watch --env=jsdom"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.14.5",
        "@testing-library/react-hooks": "^7.0.1",
        "axios": "^0.21",
        "babel-jest": "^27.0.6",
        "jest": "^27.0.6",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-error-boundary": "^3.1.3",
        "standard": "^16.0.3"
    },
    "jest": {
        "testRegex": "resources/js/tests/.*.test.jsx?$",
        "transform": {
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
        }
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    }
}
